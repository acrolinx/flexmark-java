<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>lib</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>com.acrolinx.flexmark:flexmark</include>
                <include>com.acrolinx.flexmark:flexmark-ext-autolink</include>
                <include>com.acrolinx.flexmark:flexmark-ext-definition</include>
                <include>com.acrolinx.flexmark:flexmark-ext-gfm-strikethrough</include>
                <include>com.acrolinx.flexmark:flexmark-ext-gfm-tasklist</include>
                <include>com.acrolinx.flexmark:flexmark-ext-tables</include>
                <include>com.acrolinx.flexmark:flexmark-ext-typographic</include>
                <include>com.acrolinx.flexmark:flexmark-ext-yaml-front-matter</include>
                <include>com.acrolinx.flexmark:flexmark-util-ast</include>
                <include>com.acrolinx.flexmark:flexmark-util-builder</include>
                <include>com.acrolinx.flexmark:flexmark-util-collection</include>
                <include>com.acrolinx.flexmark:flexmark-util-data</include>
                <include>com.acrolinx.flexmark:flexmark-util-dependency</include>
                <include>com.acrolinx.flexmark:flexmark-util-format</include>
                <include>com.acrolinx.flexmark:flexmark-util-html</include>
                <include>com.acrolinx.flexmark:flexmark-util-misc</include>
                <include>com.acrolinx.flexmark:flexmark-util-options</include>
                <include>com.acrolinx.flexmark:flexmark-util-sequence</include>
                <include>com.acrolinx.flexmark:flexmark-util-visitor</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <outputDirectory>./</outputDirectory>
                <unpack>true</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
